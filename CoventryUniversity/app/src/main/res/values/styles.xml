<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/textSecondaryInverse</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyleToggle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoSatusNoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorPrimary">@color/textPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textSecondaryInverse</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/co_button_text</item>
        <item name="android:background">@drawable/dr_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:textColor">@color/co_radiobutton_text</item>
        <item name="android:background">@drawable/dr_radio_button</item>
        <item name="android:button">@drawable/dr_radio_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/co_primary_text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:hyphenationFrequency">normal</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/co_primary_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:hyphenationFrequency">normal</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/co_button_text</item>
    </style>

</resources>
